---
name: create_user
resource: User
resource_owner: anyone
redirect_to: users
fields:
  email:
  first_name:
  last_name:
---
{%- form %}

  {% assign fields = form_builder.fields -%}

  {%- include "modules/helpers/forms/input_text", name: "form[first_name]", label: "First Name", value: fields.first_name.value -%}

  {%- include "modules/helpers/forms/input_text", name: "form[last_name]", label: "Last Name", value: fields.last_name.value -%}

  {%- include "modules/helpers/forms/input_email", name: "form[email]", label: "Email Address", value:  fields.email.value -%}
  
  <input type="submit" value="Submit">
  
{% endform -%}